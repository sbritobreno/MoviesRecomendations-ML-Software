<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movies</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/styles.css" />
    <!--BOOSTRAP ICONS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <nav id="navbar">
      <a href="/" id="logo">
        <img src="/img/logo.png" alt="Movies" />
      </a>
      <Ul>
        <!--URLs after authentication -->
        {{#if session.userid}}
          <li><a href="/movies/foryou">ForYou</a></li>
          <li><a href="/auth/logout">logout</a></li>
        {{else}}
          <li><a href="/auth/login">login</a></li>
        {{/if}}
      </Ul>
    </nav>
    <div class="container">
      <!--Messages -->
      {{#if messages.message}}
        <div class="message">
          {{messages.message}}
        </div>
      {{/if}}
      {{{body}}}
    </div>
    <footer>
      <p><span>Movies</span> &copy: 2024</p>
    </footer>
    <script>
      // Set a timeout to remove the message after 5 seconds (5000 milliseconds)
      setTimeout(function() { var messageDiv =
      document.querySelector('.message'); if (messageDiv) { messageDiv.remove();
      } }, 3000);
    </script>
  </body>
</html>